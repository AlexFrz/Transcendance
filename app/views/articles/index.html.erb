<h1> Articles </h1>

<div class="container">
    <div class="row">
        <% @categories.each do |category| %>
        <%= link_to category.category, articles_path(:cate => category.id) %>
        <% end %>
    </div>

    <% @articles.each do |article| %>
    <div class="col-md-6">
        <div class="card mt-3">
            <div class="card-body">
                <h3> <%= link_to article.title, article_path(article.id) %> </h3>
                <%= link_to "Voir", article_path(article.id), class: "btn btn-danger" %>
            </div>
        </div>
    </div>
    <% end %>

</div>
