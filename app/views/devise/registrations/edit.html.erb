<div class="banner">
<%= image_tag "alps.jpg", class: "fullsize"%>
    <div class="login-box">
        <h1 class="bg-red">Modifier <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <div class="textbox">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>


  <div class="field">
  <div class="textbox">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Nous attendont la confirmation de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <div class="textbox">
    <%= f.label :password %> <br />
    <%= f.password_field :password, autocomplete: "nouveau mot de passe" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>
  </div>

  <div class="field">
  <div class="textbox">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nouveau mot-de-passe" %>
  </div>
  </div>

  <div class="field">
  <div class="textbox">
    <%= f.label :current_password %> <i><br />
    <%= f.password_field :current_password, autocomplete: "mot-de-passe actuel" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Mettre Ã  jour", class: "bttn" %>
    <center><%= link_to "Back", :back, class: "none"%></center>
  </div>
<% end %>
</div>

