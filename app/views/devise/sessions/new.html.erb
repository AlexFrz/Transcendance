<div class="banner">
<%= image_tag "alps.jpg", class: "fullsize"%>
    <div class="login-box">
        <h1 class="bg-red">Se connecter</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
          <div class="textbox">
            <%= f.label :email %><br />
            <%= f.text_field :email, autocoplete: "email" %>
          </div>
          </div>

          <div class="field">
          <div class="textbox">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "mot-de-passe" %>
          </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Se connecter", class: "bttn" %>
          </div>
        <% end %>
        <center>
        <%= render "devise/shared/links", class: "text-white" %>
        </center>
        </div>


</div>