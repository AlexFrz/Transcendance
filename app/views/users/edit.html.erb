
<div class="containersmall">
<%= form_for @user do |f| %>


        <div class="form-group">
            <%= f.text_field :username, placeholder: "#Nom", class: "article-title" %>
        </div>
        <div class="form-group">
            <%= f.text_area :description, placeholder: "Dis-nous qui tu es?", class: "article-content editable"%>
        </div>
        <center>

        <% if @user.avatar.attached? %>
            <div class="field">
                <%= image_tag(@user.avatar_thumbnail) %>
                <%= f.file_field :avatar%>
            </div>
        <% else %>
            <div class="field none padding">
                <label class="btn arrow2">
                Ajouter un avatar
                <><%= f.file_field :avatar%></span>
        <% end %>


        </label>
        </div>

    <%= f.submit "Modifier", :class => "btn arrow" %>
    <p>    <%= link_to "Retour", articles_path, class: "none" %></p>

</center>
<% end %>
</div>